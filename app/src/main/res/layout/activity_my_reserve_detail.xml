<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_my_reserve_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/ll_top_bar"
        layout="@layout/base_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/NestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="产品名称"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="60px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:id="@+id/lin_product_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="产品状态"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_product_status"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:id="@+id/line_product_status"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:id="@+id/lin_product_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="产品类别"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_product_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:id="@+id/line_product_type"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:id="@+id/lin_money_buy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="起购金额"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_money_buy"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:id="@+id/line_money_buy"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:id="@+id/lin_money_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="递增金额"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_money_add"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:id="@+id/line_money_add"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="预期年化收益率"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_percent"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:id="@+id/lin_reserve_time_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="预约开始时间"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_reserve_time_start"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:id="@+id/line_reserve_time_start"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:id="@+id/lin_reserve_time_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="预约结束时间"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_reserve_time_end"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:id="@+id/line_reserve_time_end"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="挂牌开始时间"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_raise_time_start"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="挂牌结束时间"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_raise_time_end"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="是否允许转让"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_transfer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:id="@+id/ll_isWholeTransfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="35px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="转让是否可拆分:"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60px"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="不可拆分"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorGeneral" />
                    </LinearLayout>


                <LinearLayout
                    android:id="@+id/lin_manage_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="起息日"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_manage_start"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>


                <View
                    android:id="@+id/line_manage_start"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:id="@+id/lin_manage_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="到期日"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_manage_end"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>


                <View
                    android:id="@+id/line_manage_end"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="付息方式"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_payment_way"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="付息频率"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_payment_frequency"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:id="@+id/lin_risk_level_view"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:id="@+id/lin_risk_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_risk_level_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_risk_level"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="计息方式"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_interest_way"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:id="@+id/lin_income_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="收益类型"
                        android:textColor="@color/black"
                       android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_income_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                       android:textSize="15sp" />
                </LinearLayout>


                <View
                    android:id="@+id/line_income_type"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGeneral" />

                <LinearLayout
                    android:id="@+id/lin_pdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35px"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/attachment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_my_reserve_detail_pdf"></android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/layout_no_net_data" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
