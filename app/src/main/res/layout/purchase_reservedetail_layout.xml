<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cust_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_dialog">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minWidth="300px"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            android:gravity="center"
            android:text="请输入预约金额"
            android:textColor="@android:color/black"
           android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGeneral" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:gravity="center"
            android:text="提示"
            android:textColor="@android:color/black"
           android:textSize="15sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_marginTop="35px"
            android:layout_marginRight="45px"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_assignee_pay_border"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="请输入预约金额"
                    android:inputType="number"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingLeft="15px"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorGeneral"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:gravity="center"
                    android:text="元"
                    android:textColor="@color/colorGeneral"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10px">

                <TextView
                    android:id="@+id/tv_depositRate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="保证金比例10.00%"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_baozheng"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="保证金:元"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="35px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10px"
                android:layout_marginLeft="10px"
                android:layout_marginBottom="10px"
                android:layout_weight="1"
                android:background="#F8F8F8"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/blue"
               android:textSize="15sp" />

            <!--<View-->
                <!--android:layout_width="1px"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginTop="15px"-->
                <!--android:layout_marginBottom="15px"-->
                <!--android:background="@color/product_color" />-->

            <TextView
                android:id="@+id/confirm_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_marginBottom="10px"
                android:layout_weight="1"
                android:background="#F8F8F8"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/blue"
               android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>