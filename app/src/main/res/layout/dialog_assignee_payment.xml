<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cust_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minWidth="300px"
        android:layout_margin="10px"
        android:orientation="vertical"
        android:scrollbars="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:gravity="center"
            android:text="温馨提示"
            android:textColor="@android:color/black"
           android:textSize="15sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:gravity="center"
            android:text="提示"
            android:textColor="@android:color/black"
           android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="45px"
            android:layout_marginRight="45px"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_assignee_pay_border"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/message"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:gravity="center|left"
                    android:paddingLeft="15px"
                    android:inputType="number"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/colorGeneral"
                    android:background="@null"
                    android:hint="最低收益1000元"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorGeneral"
                    android:text="元"/>
            </LinearLayout>


            <TextView
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:textColor="@color/colorRed"
                android:gravity="left"
                android:text="零元整"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="35px"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cancel_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="取消"
                android:gravity="center"
                android:background="@drawable/dialog_bg_shape"
                android:textColor="@color/blue"
                android:layout_marginRight="10px"
               android:textSize="15sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="15px"
                android:layout_marginBottom="15px"
                android:background="@color/product_color"/>

            <TextView
                android:id="@+id/confirm_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10px"
                android:layout_weight="1"
                android:text="确定"
                android:gravity="center"
                android:background="@drawable/dialog_bg_shape"
                android:textColor="@color/blue"
               android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>