<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_bank_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.hundsun.zjfae.activity.mine.AddBankActivity">

    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_alignParentTop="true">
        <include
            android:id="@+id/ll_top_bar"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            layout="@layout/base_title" />

        <TextView
            android:id="@+id/bank_deal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="15px"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:text="可支持银行"/>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="35px"
                    android:text="*"
                    android:textColor="@color/colorRed"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="200px"
                    android:layout_height="match_parent"
                    android:text="持卡人"
                    android:layout_marginLeft="15px"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:gravity="center|left"/>

                <EditText
                    android:id="@+id/id_name"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="请输入真实姓名"
                    android:paddingLeft="15px"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:textColor="@android:color/black"
                    android:background="@null"/>



                <ImageView
                    android:id="@+id/id_card_name_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="35px"
                    android:paddingLeft="35px"
                    android:scaleType="center"
                    android:visibility="gone"
                    android:src="@drawable/camera"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/text_light"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="35px"
                    android:text="*"
                    android:textColor="@color/colorRed"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="200px"
                    android:layout_height="match_parent"
                    android:text="手机号"
                    android:layout_marginLeft="15px"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:gravity="center|left"/>

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="请输入手机号"
                    android:paddingLeft="15px"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:enabled="false"
                    android:textColor="@android:color/black"
                    android:gravity="center|left"
                    android:background="@null"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/text_light" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="35px"
                    android:text="*"
                    android:textColor="@color/colorRed"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="200px"
                    android:layout_height="match_parent"
                    android:text="银行卡号"
                    android:layout_marginLeft="15px"
                    android:textColor="@android:color/black"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:gravity="center|left"/>

                <EditText
                    android:id="@+id/bank_card"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="请输入银行卡号"
                    android:paddingLeft="15px"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:gravity="center|left"
                    android:textColor="@android:color/black"
                    android:background="@null"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/text_light" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="35px"
                    android:text="*"
                    android:textColor="@color/colorRed"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="200px"
                    android:layout_height="match_parent"
                    android:text="银行"
                    android:layout_marginLeft="15px"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:gravity="center|left"/>

                <ImageView
                    android:id="@+id/bank_icon"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:paddingLeft="15px"
                    android:layout_gravity="center"/>


                <TextView
                    android:id="@+id/bank_name"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="请选择银行>"
                    android:paddingLeft="15px"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:gravity="center|left" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/text_light" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="35px"
                    android:text="*"
                    android:textColor="@color/colorRed"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="200px"
                    android:layout_height="match_parent"
                    android:text="身份证号"
                    android:layout_marginLeft="15px"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:gravity="center|left"/>

                <EditText
                    android:id="@+id/id_card"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="请输入身份证号"
                    android:paddingLeft="15px"
                    android:textSize="15sp"
                    android:digits="0123456789xX"
                    android:inputType="number"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:textColor="@android:color/black"
                    android:background="@null"/>

                <ImageView
                    android:id="@+id/id_card_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="35px"
                    android:paddingLeft="35px"
                    android:scaleType="center"
                    android:visibility="gone"
                    android:src="@drawable/camera"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/text_light" />

            <LinearLayout
                android:id="@+id/needSms_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10px"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="45px"
                        android:text="*"
                        android:textColor="@color/colorRed"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="200px"
                        android:layout_height="match_parent"
                        android:text="验证码"
                        android:layout_marginLeft="15px"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:gravity="center|left"/>

                    <EditText
                        android:id="@+id/needSms_ed"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:hint="请输入验证码"
                        android:paddingLeft="15px"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:gravity="center|left"
                        android:background="@null"/>

                    <Button
                        android:id="@+id/needSms_button"
                        android:layout_width="wrap_content"
                        android:layout_height="90px"
                        android:text="获取验证码"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:background="@drawable/account_button_selector"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5px"
                    android:background="@color/text_light"/>

            </LinearLayout>



            <TextView
                android:id="@+id/bank_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@android:color/black"
                android:layout_marginTop="45px"/>




            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="35px"
                android:background="@android:color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/add_bank_bg">


                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="单笔限额(元)"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/hMaxAmount_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="单日限额(元)"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/maxAmount_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="单月限额(元)"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/mMaxAmount_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/black"/>



            <LinearLayout
                android:id="@+id/agreement_layout"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginTop="35px"
                android:orientation="horizontal"
                android:visibility="visible">

                <CheckBox
                    android:id="@+id/add_card_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:checked="true"
                    android:layout_marginLeft="15px" />


                <TextView
                    android:id="@+id/tv_agreement"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="我已阅读并同意相关协议《充值授权书》"
                    android:textColor="@android:color/black" />
            </LinearLayout>


            <TextView
                android:id="@+id/spdb_protocol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10px"
                android:gravity="left|center"
                android:visibility="gone"
                android:textSize="15sp"
                android:textColor="@color/agreement"
                android:text="《上海浦东发展银行商户快捷支付业务客户服务协议》"/>


            <Button
                android:id="@+id/determine_binding"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_margin="35px"
                android:background="@drawable/product_buy_clickable"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:clickable="false"
                android:text="确认绑定"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>



</LinearLayout>

