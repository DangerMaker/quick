<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cust_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:layout_gravity="center" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minWidth="300px"
        android:layout_margin="10px"
        android:orientation="vertical"
        android:scrollbars="vertical" >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="35px"
            android:layout_marginBottom="35px"
            android:textColor="@android:color/black"
           android:textSize="15sp"
            android:text="请输入图形验证码"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="45px"
            android:layout_marginRight="45px"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/ed_imageCode"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="80px"
                    android:gravity="center|left"
                    android:paddingLeft="15px"
                    android:inputType="number"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/colorGeneral"
                    android:background="@drawable/login_view_shape"
                   android:textSize="15sp"
                    android:hint="请输入验证码"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/imageCode"
                    android:layout_marginLeft="15px"
                    android:layout_width="180px"
                    android:layout_height="80px" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="10px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="取消"
                android:gravity="center"
                android:background="@drawable/dialog_bg_shape"
                android:textColor="@color/blue"
                android:layout_marginRight="10px"
               android:textSize="15sp" />



            <TextView
                android:id="@+id/confirm_btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10px"
                android:layout_weight="1"
                android:text="确定"
                android:gravity="center"
                android:background="@drawable/dialog_bg_shape"
                android:textColor="@color/blue"
               android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>