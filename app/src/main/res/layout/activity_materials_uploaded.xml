<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mater_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.hundsun.zjfae.activity.home.HighNetWorthMaterialsUploadedActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:orientation="horizontal"
        android:background="@color/colorRed">

        <TextView
            android:id="@+id/back_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="35px"
            android:paddingRight="35px"
            android:text="返回"
           android:textSize="15sp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:gravity="center"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="资产证明"
           android:textSize="15sp"
            android:singleLine="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            />
        <TextView
            android:id="@+id/required_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="35px"
            android:paddingRight="35px"
            android:text="完成"
           android:textSize="15sp"
            android:singleLine="true"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:layout_gravity="right"
            android:gravity="center"/>


    </FrameLayout>



    <LinearLayout
        android:id="@+id/animation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px">
            <TextView
                android:id="@+id/number_tv"
                android:layout_width="60px"
                android:layout_height="60px"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_blue_circular"
                android:text="0"/>

            <TextView
                android:id="@+id/amount"
                android:layout_toRightOf="@id/number_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginLeft="10px"
                android:textColor="@android:color/black"
               android:textSize="15sp" />

        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/explain"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center|left"
                android:layout_marginLeft="10px"
                android:textColor="@color/storage_layout_bg"
                android:text="详细说明"/>


        </LinearLayout>


    </LinearLayout>

    <WebView
        android:id="@+id/highNetWorthUpload"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:layout_marginLeft="100px">
    </WebView>

    <TextView
        android:id="@+id/materials_tv"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:gravity="center"
       android:textSize="15sp"
        android:textColor="@android:color/black"
        android:background="@drawable/materials_shape"
        android:drawableRight="@drawable/drop_down_unselected_icon">
    </TextView>

    <ImageView
        android:id="@+id/photo_image"
        android:layout_width="match_parent"
        android:layout_height="314px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:scaleType="fitXY"
        android:src="@drawable/add_photo"
        />

    <Button
        android:id="@+id/bt_next"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_margin="25px"
        android:background="@drawable/login_button"
        android:textColor="@android:color/white"
        android:text="下一步"/>



</LinearLayout>