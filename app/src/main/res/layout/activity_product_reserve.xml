<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_product_reserve"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <include
        android:id="@+id/ll_top_bar"
        layout="@layout/base_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/lin_my_reserve"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:paddingLeft="35px"
        android:paddingRight="35px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:singleLine="true"
            android:textColor="@android:color/black"
           android:textSize="15sp"
            android:text="我的个性化预约" />

        <ImageView
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:scaleType="center"
            android:src="@drawable/right_back" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGeneral" />

    <LinearLayout
        android:id="@+id/lin_go_reserve"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:paddingLeft="35px"
        android:paddingRight="35px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:singleLine="true"
           android:textSize="15sp"
            android:textColor="@android:color/black"
            android:text="马上预约" />

        <ImageView
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:scaleType="center"
            android:src="@drawable/right_back" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGeneral" />

    <LinearLayout
        android:id="@+id/lin_special_reserve"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:paddingLeft="35px"
        android:paddingRight="35px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:singleLine="true"
           android:textSize="15sp"
            android:textColor="@android:color/black"
            android:text="个性化预约" />

        <ImageView
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:scaleType="center"
            android:src="@drawable/right_back" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGeneral" />

</LinearLayout>
