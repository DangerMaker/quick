<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Theme_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_date_start"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right">

            <ImageView
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_marginLeft="60px"
                android:src="@drawable/date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="选择起始日期:"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_date_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@android:color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGeneral" />

    <LinearLayout
        android:id="@+id/lin_date_end"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right">

            <ImageView
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_marginLeft="60px"
                android:src="@drawable/date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="选择结束日期:"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_date_end"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@android:color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGeneral" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lin_have_et"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10px"
                    android:text="手机号"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="60px"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:background="@drawable/shape_red_ellipse_grey"
                android:inputType="number"
                android:lines="1"
                android:paddingLeft="10px"
                android:paddingRight="10px"
               android:textSize="15sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical">

                <Button
                    android:id="@+id/btn_search_phone"
                    android:layout_width="120px"
                    android:layout_height="60px"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/login_button"
                    android:gravity="center"
                    android:text="查询"
                    android:textColor="@color/Theme_white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_no_et"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="200px"
                    android:layout_height="60px"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/login_button"
                    android:gravity="center"
                    android:text="立即查询"
                    android:textColor="@color/Theme_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>