<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/eligible_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_shape"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/notice_title"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/notice_title"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

            <WebView
                    android:id="@+id/notice_webView"
                    android:layout_width="match_parent"
                    android:layout_height="375dp" />


            <LinearLayout
                    android:id="@+id/becomeInvestor_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/ll_layout"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_margin="13dp"
                        android:orientation="horizontal">

                    <Button
                            android:id="@+id/data_up"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/data_up_shape"
                            android:textColor="@android:color/white" />

                    <Button
                            android:id="@+id/approve_up"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/approve_up_shape"
                            android:text="充值申请"
                            android:textColor="@color/colorRed" />
                </LinearLayout>

                <TextView
                        android:id="@+id/cancel_tv"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="不了,再等等"
                        android:textColor="@color/colorRed"
                        android:textSize="15sp" />


            </LinearLayout>

            <Button
                    android:id="@+id/becomeInvestor_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/becomeinvestor_bg"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />


            <Button
                    android:id="@+id/bt_close"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/company_shape_bg"
                    android:text="知道了"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />


        </LinearLayout>


        <ImageView
                android:id="@+id/cancel_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:scaleType="center"
                android:src="@drawable/notice_clean" />

    </FrameLayout>


</LinearLayout>
