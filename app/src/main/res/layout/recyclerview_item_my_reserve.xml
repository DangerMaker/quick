<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Theme_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginTop="20px"
        android:layout_marginRight="15px"
        android:layout_marginBottom="15px"
        android:background="@drawable/bg_my_reserve"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:layout_toLeftOf="@+id/lin_btn"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@android:color/black"
               android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/lin_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="7px"
                    android:background="@drawable/shap_background_red_nopadding"
                    android:gravity="center"
                    android:lines="1"
                    android:minWidth="140px"
                    android:padding="10px"
                    android:text="取消预约"
                    android:textColor="@color/Theme_white"
                   android:textSize="15sp" />

                <TextView
                    android:id="@+id/btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7px"
                    android:background="@drawable/shap_background_red_nopadding"
                    android:gravity="center"
                    android:lines="1"
                    android:minWidth="140px"
                    android:padding="10px"
                    android:text="立即交易"
                    android:textColor="@color/Theme_white"
                   android:textSize="15sp" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="@color/colorGeneral" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px">

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="10,000元"
                    android:textColor="@color/colorGeneral"
                   android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/tv_percent"
                    android:layout_toRightOf="@+id/tv_money"
                    android:gravity="center_horizontal"
                    android:text="2018-10-22 00:00:00"
                    android:textColor="@color/colorGeneral"
                   android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:text="7.20%"
                    android:textColor="@color/colorGeneral"
                   android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/tv_startorend_time"
                    android:text="预约金额(元)"
                    android:textColor="@color/colorGeneral"
                   android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_startorend_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="挂牌结束时间"
                    android:textColor="@color/colorGeneral"
                   android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/tv_startorend_time"
                    android:gravity="right"
                    android:text="预期年化收益率"
                    android:textColor="@color/colorGeneral"
                   android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>