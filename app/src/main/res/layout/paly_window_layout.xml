<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/image_back"
                    android:layout_width="65px"
                    android:layout_height="65px"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="25px"
                    android:scaleType="center"
                    android:src="@drawable/left_back" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="请输入交易密码"
                    android:textColor="@android:color/black"
                   android:textSize="15sp" />


            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="75px"
                android:layout_marginRight="75px"
                android:background="@drawable/top_right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay_box1"
                    style="@style/InputTextView"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/black" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@drawable/sex_boxline_bg" />

                <TextView
                    android:id="@+id/pay_box2"
                    style="@style/InputTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/black" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@drawable/sex_boxline_bg" />

                <TextView
                    android:id="@+id/pay_box3"
                    style="@style/InputTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/black" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@drawable/sex_boxline_bg" />

                <TextView
                    android:id="@+id/pay_box4"
                    style="@style/InputTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/black" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@drawable/sex_boxline_bg" />

                <TextView
                    android:id="@+id/pay_box5"
                    style="@style/InputTextView"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/black" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@drawable/sex_boxline_bg" />

                <TextView
                    android:id="@+id/pay_box6"
                    style="@style/InputTextView"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/security" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="安全保障"
                android:textColor="@android:color/black"
               android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black" />

        <com.hundsun.zjfae.common.view.XNumberKeyboardView
            android:id="@+id/view_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#b0b0b0"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:keyBackground="@drawable/selector_key_background"
            android:keyTextColor="#000000"
            android:shadowColor="@android:color/transparent"
            android:shadowRadius="0"
            app:xnkv_deleteBackgroundColor="#d2d2d2"
            app:xnkv_deleteDrawable="@mipmap/keyboard_backspace"
            app:xnkv_deleteWidth="22dp" />

    </LinearLayout>


</RelativeLayout>