<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom 2dp Shadow ：底部阴影层-->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#EEE" />

            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- White Top color：顶部层 -->
    <item
        android:bottom="1.5px"
        android:left="1.5px"
        android:right="1.5px"
        android:top="1px">
        <shape android:shape="rectangle" >
            <solid android:color="@color/Theme_white" />

            <corners android:radius="4dp" />

            <!--<padding-->
                <!--android:bottom="5dp"-->
                <!--android:left="5dp"-->
                <!--android:right="5dp"-->
                <!--android:top="5dp" />-->



            <!--设置边框 宽度=1px，颜色为skyBluesss-->
            <stroke
                android:width="0.5px"
                android:color="#DDD" />


        </shape>
    </item>

</layer-list>